<h1>This is the teacher dashboard</h1>
<p>This dashboard is for: <%= @teacher.first_name %> </p>
<% if current_user && current_user.id == @teacher.id %>
  <p>You are logged in as this teacher.</p>
  <p><%= link_to 'Create a new course', new_teacher_course_path(current_user) %></p>
<% end %>
<div class='courses'>
  <ul>
    <% @teacher.courses.each do |course| %>
      <li><%= course.title %></li>
    <% end %>
  </ul>
</div>

