<br />
<div class="booyah-box col-12">
  <h1>Dashboard for <%= @teacher.first_name %>&nbsp<%= @teacher.last_name %></h1>
  <% if current_user && current_user.id == @teacher.id %>
    <p>You are logged in as this teacher.</p>
    <p><%= link_to 'Create a new course', new_teacher_course_path(current_user) %></p>
  <% end %>
  <div class='courses'>
    <ul>
      <% @teacher.courses.each do |course| %>
        <li><%= link_to course.title, course_path(course) %></li>
      <% end %>
    </ul>
  </div>
</div>